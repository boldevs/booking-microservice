{
  "AppOptions": {
    "Name": "ApiGateway"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "Yarp": {
    "routes": {
      "identity": {
        "clusterId": "identity",
        "match": {
          "path": "/api/v1/identity/{**catch-all}"
        },
        "transforms": [
          {
            "pathRemovePrefix": "/api/v1"
          }
        ]
      },
      "flight": {
        "clusterId": "flight",
        "match": {
          "path": "/api/v1/flight/{**catch-all}"
        },
        "transforms": [
          {
            "pathRemovePrefix": "/api/v1"
          }
        ]
      },
      "passenger": {
        "clusterId": "passenger",
        "match": {
          "path": "/api/v1/passenger/{**catch-all}"
        },
        "transforms": [
          {
            "pathRemovePrefix": "/api/v1"
          }
        ]
      },
      "booking": {
        "clusterId": "booking",
        "match": {
          "path": "/api/v1/booking/{**catch-all}"
        },
        "transforms": [
          {
            "pathRemovePrefix": "/api/v1"
          }
        ]
      }
    },
    "clusters": {
      "identity": {
        "destinations": {
          "destination1": {
            "address": "https://identity:443"
          }
        },
        "httpClient": {
          "dangerousAcceptAnyServerCertificate": true
        }
      },
      "flight": {
        "destinations": {
          "destination1": {
            "address": "https://flight:443"
          }
        },
        "httpClient": {
          "dangerousAcceptAnyServerCertificate": true
        }
      },
      "passenger": {
        "destinations": {
          "destination1": {
            "address": "https://passenger:443"
          }
        },
        "httpClient": {
          "dangerousAcceptAnyServerCertificate": true
        }
      },
      "booking": {
        "destinations": {
          "destination1": {
            "address": "https://booking:443"
          }
        },
        "httpClient": {
          "dangerousAcceptAnyServerCertificate": true
        }
      }
    }
  },
  "Jwt": {
    "Authority": "https://localhost:5005"
  },
  "AllowedHosts": "*"
}
